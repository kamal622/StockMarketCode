<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revert Fund"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="vertical"
        android:background="@drawable/btn_unselected">
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"/>
        <EditText
            android:id="@+id/etBankDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Details"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>
        <EditText
            android:id="@+id/etBrokerage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brokerage"/>
        <EditText
            android:id="@+id/etPayOutAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PayOut Amount"/>
        <Button
            android:id="@+id/btRevertFund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revert Fund"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>