<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kp.stockmarketcode">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.MyApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".activitys.Main2Activity"></activity>
        <activity
            android:name=".activitys.login.LoginActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.registration.RegistrationActivity"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name=".activitys.main.MainActivity"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name=".activitys.editProfile.EditProfileActivity"
            android:theme="@style/AppTheme.Splash" />
    </application>

</manifest>